@model SmartEmployee.Web.Data.Entities.Position

@{
    ViewData["Title"] = "Edit Position";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Position</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditPosition">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="positionId" />
            <div class="form-group">
                <label asp-for="positionDescription" class="control-label"></label>
                <input asp-for="positionDescription" class="form-control" />
                <span asp-validation-for="positionDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary" asp-action="IndexPositions">Back to List</a>
</div>

