@model SmartEmployee.Web.Data.Entities.Position

@{
    ViewData["Title"] = "Create Position";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create Position</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreatePosition">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="positionDescription" class="control-label"></label>
                <input asp-for="positionDescription" class="form-control" />
                <span asp-validation-for="positionDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-secondary" asp-action="IndexPositions">Back to List</a>
            </div>
        </form>
    </div>
</div>


