@model SmartEmployee.Web.Models.OfficeViewModel

@{
    ViewData["Title"] = "Edit Office";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Office</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditOffice">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="officeId" />
            <partial name="_Office"/>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-secondary" asp-action="IndexOffice">Back to List</a>
            </div>
        </form>
    </div>
</div>

