@model SmartEmployee.Web.Data.Entities.Schedule

@{
    ViewData["Title"] = "Edit Schedule";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Schedule</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditSchedule">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="scheduleId" />

            <partial name="_Schedule"/>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-secondary" asp-action="IndexSchedule">Back to List</a>
            </div>
        </form>
    </div>
</div>
