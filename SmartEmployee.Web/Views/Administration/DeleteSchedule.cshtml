@model SmartEmployee.Web.Data.Entities.Schedule

@{
    ViewData["Title"] = "Delete Schedule";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete Schedule</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.scheduleName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.scheduleName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.workingHours)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.workingHours)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.scheduleBreak)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.scheduleBreak)
        </dd>
    </dl>
    
    <form asp-action="DeleteSchedule">
        <input type="hidden" asp-for="scheduleId" />
