@model IEnumerable<SmartEmployee.Web.Data.Entities.Office>

@{
    ViewData["Title"] = "Index Office";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 text-gray-800">Office</h1>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <a asp-action="CreateOffice" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
                <i class="fas fa-plus fa-sm text-white-50"></i> Create New</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.officeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.officeAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.officePhoneNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.officeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.officeAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.officePhoneNumber)
            </td>
            <td>
                <a asp-action="EditOffice" asp-route-id="@item.officeId" class="d-none d-sm-inline-block btn btn-sm btn-warning shadow-sm">
                    <span class="icon text-black-50">
                        <i class="fas fa-exclamation-triangle"></i>
                    </span><span class="text-black-50">Edit</span>
                </a>
                <a asp-action="DeleteOffice" asp-route-id="@item.officeId" class="d-none d-sm-inline-block btn btn-sm btn-danger shadow-sm">
                    <span class="icon text-white-50">
                        <i class="fas fa-trash"></i>
                    </span><span class="text">Delete</span>
                </a>
            </td>
        </tr>
}
    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>