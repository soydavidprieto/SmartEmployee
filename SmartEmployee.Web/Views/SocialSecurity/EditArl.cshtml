@model SmartEmployee.Web.Data.Entities.Arl

@{
    ViewData["Title"] = "Edit Arl";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>EditArl</h1>

<h4>Arl</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditArl">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="arlId" />
            <div class="form-group">
                <label asp-for="arlName" class="control-label"></label>
                <input asp-for="arlName" class="form-control" />
                <span asp-validation-for="arlName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="arlNit" class="control-label"></label>
                <input asp-for="arlNit" class="form-control" />
                <span asp-validation-for="arlNit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary" asp-action="IndexArl">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
