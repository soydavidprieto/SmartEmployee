@model SmartEmployee.Web.Data.Entities.Ccf

@{
    ViewData["Title"] = "EditCcf";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Ccf</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditCcf">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ccfId" />
            <div class="form-group">
                <label asp-for="ccfName" class="control-label"></label>
                <input asp-for="ccfName" class="form-control" />
                <span asp-validation-for="ccfName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ccfNit" class="control-label"></label>
                <input asp-for="ccfNit" class="form-control" />
                <span asp-validation-for="ccfNit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary" asp-action="IndexCcf">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
