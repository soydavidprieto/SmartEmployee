@model SmartEmployee.Web.Data.Entities.Eps

@{
    ViewData["Title"] = "Edit Eps";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Eps</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditEps">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="epsId" />
            <div class="form-group">
                <label asp-for="epsName" class="control-label"></label>
                <input asp-for="epsName" class="form-control" />
                <span asp-validation-for="epsName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="epsNit" class="control-label"></label>
                <input asp-for="epsNit" class="form-control" />
                <span asp-validation-for="epsNit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary" asp-action="IndexEps">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
